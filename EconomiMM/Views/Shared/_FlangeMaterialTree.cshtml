@model EconomiMM.ViewModels.CalculatorViewModel
@{
}

<div class="flange-material-window">
    
    <div class="flange-material border border-1 scroll-main-window">

    </div>
    <button type="button" class="btn btn-light add-material-btn" data-bs-toggle="modal" data-bs-target="#flange-material-Modal">
        <img class="filter-icon" src="~/img/filter.png" />
    </button>


</div>
<div class="modal" id="flange-material-Modal" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Додати матеріал</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Назад"></button>
            </div>

            <div class="modal-body">
                <label class="control-label p-2">Виробник</label>
                <div class="flange-material-modal p-2 border border-1 scroll">
                    @foreach (var materialType in Model.flangeMaterialTypes)
                    {
                        <a id="@materialType.Id" class="toggle-btn link-dark">@materialType.Name</a>
                        <div id="materialType-@materialType.Id">
                            @foreach (var material in Model.flangeMaterials)
                            {
                                @if (material.Type == materialType)
                                {
                                    <div>
                                        <input class="form-check-input" type="checkbox" value="" id="material-@material.Id">
                                        <label class="form-check-label mx-2" for="material-@material.Id">
                                            @material.Name
                                        </label>
                                        <label class="form-check-label mx-2" for="material-@material.Id">
                                            @material.Price грн/м^2
                                        </label>
                                        <br>
                                    </div>
                                }

                            }
                        </div>
                    }


                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Назад</button>
                <button id="add-flange-material-button" type="submit" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#flange-material-Modal">Підтвердити</button>
            </div>

        </div>
    </div>
</div>
