@model EconomiMM.Models.MaterialType

@{
    ViewData["Title"] = "Edit";
}

<h1>Змінити</h1>

<h4>Тип матеріалу</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group name">
                <label asp-for="Name" class="control-label">Назва</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group manufacturer">
                <label asp-for="Manufacturer" class="control-label">Виробник</label>
                <input asp-for="Manufacturer" class="form-control" />
                <span asp-validation-for="Manufacturer" class="text-danger"></span>
            </div>
            <div class="form-group material-button">
                <p class="inner">
                    <a asp-controller="Materials" asp-action="Create">Додати новий матеріал</a>
                </p>

            </div>
            <div class="form-group save-button">
                <input value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    <script src="~/js/editType.js" asp-append-version="true"></script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
