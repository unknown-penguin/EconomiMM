@model EconomiMM.ViewModels.CalcMaterialViewModel<EconomiMM.Models.FlangeMaterial>

@{
    ViewData["Title"] = "Edit";
}

<h1>Редагувати</h1>

<h4>Матеріал фланцю</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-route-id="@Model.Material.Id" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Material.Id" />
            <div class="form-group">
                <label asp-for="Material.Name" class="control-label"></label>
                <input asp-for="Material.Name" class="form-control" />
                <span asp-validation-for="Material.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Material.Type.Id" class="control-label"></label>
                <select id="material-type-id" asp-for="Material.Type.Id" asp-items="Model.MaterialTypes" class="form-control"></select>
                <span asp-validation-for="Material.Type.Id" class="text-danger"></span>
            </div>
            <div hidden class="form-group">
                <input id="material-type-name" asp-for="Material.Type.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Material.Thickness" class="control-label"></label>
                <input asp-for="Material.Thickness" class="form-control" />
                <span asp-validation-for="Material.Thickness" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Material.Price" class="control-label"></label>
                <input asp-for="Material.Price" class="form-control" />
                <span asp-validation-for="Material.Price" class="text-danger"></span>
            </div>

            <span asp-validation-for="Material" class="text-danger"></span>
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад до списку</a>
</div>

@section Scripts {
    <script src="~/js/syncTypeDataSelection.js" asp-append-version="true"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}